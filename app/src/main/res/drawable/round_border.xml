<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- we define background color -->
    <solid android:color="@color/smoke_gray" />

    <!-- we define border color and thick -->
    <stroke
        android:width="0.6dp"
        android:color="@color/themeColor"
        />

    <!-- add some padding for text inside -->
    <padding
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp" />

    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners android:radius="30dp" />

</shape>